@model IEnumerable<PROContacts.Models.Club>

@{
    ViewData["Title"] = "Index";
}

<h1>Clubs</h1>  


<p>
    <a class="btn btn-success" asp-area="" asp-controller="Clubs" asp-action="Create">Create New Club</a>
    <a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="People">Back to People</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ClubName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.OrderBy(x => x.ClubName))         

            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ClubName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
    </tbody>
</table>

