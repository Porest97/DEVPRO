@model IEnumerable<NetelloBusinessSolution.Models.TestModels.PROWorkReport>

@{
    ViewData["Title"] = "Index";
}

<h1>PRO Work Reports</h1>
<div class="row">
    <div class="col-sm-2">
        <p>Total Payment:</p>
    </div>
    <div class="col-sm-10">
        @Model.Sum(i => i.TotalPayment)
    </div>
</div>
<div class="row">
    <div class="col-sm-2">
        <p>Number of hours worked:</p>
    </div>
    <div class="col-sm-10">
        @Model.Sum(i => i.TimeWorked)
    </div>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssignedPerson)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkStarted)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkEnded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeWorked)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PaymentPerHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalPayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WorkNote)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AssignedPerson.CName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderedBy.CName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkStarted)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkEnded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeWorked)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PaymentPerHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPayment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PurchaseOrder.POName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WorkNote)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
